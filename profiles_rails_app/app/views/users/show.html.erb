<h1>Show User</h1>

<table class="table table-striped table-hover">
  <tbody>
    <tr>
      <td>Name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>Email</td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td>Active</td>
      <td><%= @user.active? ? "Yes" : "No" %></td>
    </tr>
  </tbody>
</table>

<p>
  <%= link_to "Back", users_path %> | <%= link_to "Edit", edit_user_path(@user) %> | <%= link_to "Destroy", @user, method: :delete, confirm: "Are you sure?" %>
</p>
